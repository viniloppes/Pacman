<Window x:Class="Pacman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pacman" xmlns:usercontrols="clr-namespace:Pacman.UserControls"
        mc:Ignorable="d"
        Title="Pacman" Height="1080" Width="1920" Loaded="Window_Loaded" KeyUp="Window_KeyUp" WindowState="Maximized" Closed="Window_Closed">
    <Grid>
        <Grid Background="Black">
            <Viewbox HorizontalAlignment="Center">
                <Grid Height="1080" Width="1920">

                    <usercontrols:UscInicio x:Name="uscInicio">
                        
                    </usercontrols:UscInicio>

                    <usercontrols:UscConfigTileMap x:Name="uscConfigTileMap"></usercontrols:UscConfigTileMap>


                    <usercontrols:UscGame x:Name="uscGame"></usercontrols:UscGame>
                    <usercontrols:UscGameOver x:Name="uscGameOver"></usercontrols:UscGameOver>
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
